<h1>Lost User Name or Password</h1>


<% form_tag password_resets_path,:class => 'aligned-form' do %>
<p class="label">Please enter your email address. You will receive additional directions to reset your password via email.</p>
<div class="row">
  <label>Email:</label>
  <%= text_field_tag "email" %>
</div>
<div class="row submit">
  <%= submit_tag "Reset my password", :class => 'raised' %>
</div>
<% end %>
