<% sidebar_items << capture do %>
<%= render :partial=>'/catalog/search' %>
<%= render :partial=>'/catalog/browse' %>
<% end %>

<h2>Collections</h2>
<% @collections.sort { |a,b| a[:title].gsub(/^The /, '') <=> b[:title].gsub(/^The /, '')}.each { |e|
	%>
	<div class="document">	
<%= link_to '<img src="' + Blacklight.fedora_config[:url] + '/get/' + e[:pid] + '/sdef:THUMBNAIL/preview" />', :controller => "catalog", :action => 'show', :id => e[:pid] %>
<h3><%= link_to e[:title], :controller => "catalog", :action => 'show', :id => e[:pid] %></h3>
<p><%= e[:description] %></p>
	</div>
<%
} %>
<h2>Series</h2>
<ul>
<% @series.each do |e| %>
<li>
<%= link_to e[:title], :controller => "catalog", :action => 'show', :id => e[:pid] %>
</li>
<% end %>
</ul>
